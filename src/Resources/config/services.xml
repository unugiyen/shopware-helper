<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="wdt.shopware.helper.project_dir">%kernel.project_dir%</parameter>
    </parameters>
    <services>
        <!-- EXAMPLE: CONFIG -->
        <service id="Wdt\ShopwareHelper\Config\Example\ConfigService" >
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Wdt\ShopwareHelper\Config\Example\OtherConfigService" >
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Wdt\ShopwareHelper\Config\Example\ConfigDataService" >
            <argument type="service" id="Wdt\ShopwareHelper\Config\Example\ConfigService"/>
            <argument type="service" id="Wdt\ShopwareHelper\Config\Example\OtherConfigService"/>
        </service>
        <service id="Wdt\ShopwareHelper\Config\Example\ConfigDataSubscriber">
            <argument type="service" id="Wdt\ShopwareHelper\Config\Example\ConfigDataService"/>
            <argument type="service" id="Wdt\ShopwareHelper\Mail\Example\MailService"/>
            <argument>%wdt.shopware.helper.project_dir%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>
        <!-- END EXAMPLE: CONFIG -->

        <!-- EXAMPLE: PAGE EXTENSION -->
        <service id="Wdt\ShopwareHelper\PageExtension\Example\PageDataService" >
        </service>
        <service id="Wdt\ShopwareHelper\PageExtension\Example\PageExtensionSubscriber">
            <argument type="service" id="Wdt\ShopwareHelper\PageExtension\Example\PageDataService"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        <!-- END EXAMPLE: PAGE EXTENSION -->

        <service id="Wdt\ShopwareHelper\Mail\Example\MailService" >
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument type="service" id="mail_template.repository"/>
            <argument type="service" id="shopware.filesystem.public"/>
        </service>
        <service id="Wdt\ShopwareHelper\Mail\System\Command\ImportDefaultMailTemplatesCommand">
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="mail_template_type.repository"/>
            <argument type="service" id="mail_template.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="Wdt\ShopwareHelper\Media\MediaService">
            <argument type="service" id="media.repository"/>
        </service>
    </services>
</container>
